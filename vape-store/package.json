{
  "dependencies": {
    "pug": "^3.0.2"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch-sass pugtohtml indextopage",
    "watch-sass": "sass --watch scss/style.scss scss/style.css",
    "pugtohtml": "pug index.pug -w -P",
    "indextopage": "pug page/page-product.pug -w -P",
    "dev":"index.html --watch"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
