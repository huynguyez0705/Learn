//-header url
mixin meunuHeader   
    each menu in ['Home', 'Product', 'About Us', 'Contact', 'Account']
        
        - var urlMenu;
        case menu
            when 'Home'
                - urlMenu ="/"
            when 'Product'
                - urlMenu ="./Page/page-product.html"
            default
                - urlMenu ="#"
        li
            a(href= urlMenu)= menu


mixin productFeatured(titlePro,imagePro,imgRat,productNum)
        .product-type(class=`Product_${productNum}`)
                .img-product(class=`Product_${productNum}`)
                    img(src= imagePro, alt= titlePro)
                .content-product(class=`Product_${productNum}`)
                    h3.title-product= titlePro
                    .rating-product
                        // phần này là làm 1 số trên src nhưng phải trùng tên với nhau  
                        each star in [1,2,3,4,5]
                            span
                                img(src= imgRat.replace(`{star}`, star), alt=`Star${star}`)
                    .price-product $59.00

