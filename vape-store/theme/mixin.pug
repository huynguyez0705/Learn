//- footer ourlink
mixin followOurLinks
    each followOur in ['Facebook','Twitter','Instagram','Youtube']
                - var url;
                - var followUs = followOur;
                case followUs
                    when 'Facebook'
                        - url = 'https://facebook.com'
                    when 'Twitter'
                        - url = 'https://twitter.com'
                    when 'Instagram'
                        - url = 'https://instagram.com'
                    when 'Youtube'
                        - url = 'https://youtube.com'
                    default
                        - url = '#'
                li
                    a(href=url)= followOur