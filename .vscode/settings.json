{
	"editor.inlineSuggest.showToolbar": "always",
	"files.autoSave": "afterDelay",
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnPaste": true,
	"editor.formatOnType": true,

	"editor.fontWeight": "normal",
	"editor.renderWhitespace": "selection",
	"editor.minimap.autohide": false,
	"editor.minimap.enabled": true,
	"editor.tabSize": 2,
	"a-file-icon-vscode.folderTheme": "specific",
	"a-file-icon-vscode.folderColor": "#727272",
	"a-file-icon-vscode.saturation": 1,
	"cSpell.language": "vi,en",
	"cSpell.words": ["cfpass"],
	"html-to-css-autocompletion.triggerCharacters": false,
	"html-to-css-autocompletion.autocompletionFilesScope": "multi-root"
}
